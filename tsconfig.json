{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "pages",
    "components",
    "lib",
    "hooks",
    "styles",
    "types"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "functions",
    "pages/_api_disabled",
    "trenbet-escrow",
    "target",
    "**/tests/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/_archived/**"
  ]
}





